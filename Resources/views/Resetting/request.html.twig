{% extends bruery_core_get_template('bruery_user.template.layout') %}

{% trans_default_domain 'SonataUserBundle' %}

{% block bruery_user_header %}{% endblock %}

{% block bruery_user_message %}
	{% if account_error is defined %}
		<div class="alert alert-danger alert-dismissible">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
			<h4><i class="icon fa fa-ban"></i> Alert!</h4>
			{% set msg = 'resetting.request.'~account_error %}
			<p>{{ msg |trans({'%username%': username}) | raw }}</p>
		</div>
	{% endif %}
{% endblock bruery_user_message %}

{% block fos_user_content %}
	<div class="lockscreen-logo">
		{{ "title_user_resetting" | trans({}, 'SonataUserBundle') | raw}}
	</div>
	<div class="lockscreen-name">{{ 'security.resetting.title' | trans({}, 'SonataUserBundle') }}</div>
    {% include bruery_core_get_template('bruery_user.template.resetting.request_content') %}
{% endblock fos_user_content %}