<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sonata_user_registration_register" path="/">
        <default key="_controller">BrueryUserBundle:RegistrationSonataUser:register</default>
    </route>

    <route id="sonata_user_registration_check_email" path="/check-email" methods="GET">
        <default key="_controller">BrueryUserBundle:RegistrationSonataUser:checkEmail</default>
    </route>

    <route id="sonata_user_registration_confirm" path="/confirm/{token}" methods="GET">
        <default key="_controller">BrueryUserBundle:RegistrationSonataUser:confirm</default>
    </route>

    <route id="sonata_user_registration_confirmed" path="/confirmed" methods="GET">
        <default key="_controller">BrueryUserBundle:RegistrationSonataUser:confirmed</default>
    </route>

</routes>
